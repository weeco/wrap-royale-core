{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Current Test File",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
        "args": [
          "--timeout", "999999",
          "--colors",
          "-r",
          "ts-node/register",
          "${relativeFile}"
        ],
        "cwd": "${workspaceRoot}",
        "protocol": "inspector",
        "outputCapture": "std"
      },
      {
        "name": "All tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
        "args": [
          "--timeout", "999999",
          "--colors",
          "-r",
          "ts-node/register",
          "test/**/*.spec.ts"
        ],
        "cwd": "${workspaceRoot}",
        "protocol": "inspector",
        "outputCapture": "std"
      }
    ]
}
